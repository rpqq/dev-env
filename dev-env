#!/usr/bin/env bash

# variable containing home
script_dir=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

# dry run functionality
dry="0"

# parse your own command line args
while [[ $# -gt 0 ]]; do
	if [[ $1 == "--dry" ]]; then
		dry="1"
	fi
	#shift - pops from arg list
	shift
done

#function
log() {
	if [[ $dry == "1" ]]; then
		echo "[DRY_RUN]: $@"
	else
		echo "$@"
	fi
}

#function
execute() {
	log "execute $@"
	if [[ $dry == "1" ]]; then
		return
	fi
	"$@"
}

log "----------------  dev-env ----------------"

copy_dir() {
	from=$1
	to=$2

	# push location to stack
	pushd $from > /dev/null
	dirs=$(find . -mindepth 1 -maxdepth 1 -type d)
	for dir in $dirs; do
		execute rm -rf $to/$dir
		execute cp -r $dir $to/$dir
	done
	popd > /dev/null
}

# copy from this file to this directory
copy_file() {
	from=$1
	to=$2
	name=$(basename $from)

	execute rm $to/$name
	execute cp $from $to/$name
}

copy_dir config $HOME/.config
copy_dir .local $HOME/.local
copy_file .specialconfig $HOME/.config
